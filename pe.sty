    {\abstractsize \textbf{Streszczenie.} \@streszcz\textbf{(\@tytul)}\par}
    \vskip 1em
    }
    {\abstractsize \textbf{Keywords:} \@keywords\\
                   \textbf{S\l{}owa kluczowe:} \@slklucz\par}
